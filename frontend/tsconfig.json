{
  "compilerOptions": {
    "lib": ["DOM", "ES2019"],
    "target": "ES2020",
    "module": "es2020",
    "strict": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "paths": {
      "@frontend/*": ["src/*"],
      "@shared/*": ["node_modules/tre-hanna-shared/src/*"]
    }
  },
  "references": [{ "path": "../backend/tsconfig.trpc.json" }],
  "include": ["src/**/*", "types", "../shared/src/date.ts"]
}
