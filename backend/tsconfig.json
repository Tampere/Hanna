{
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "NodeNext",
    "strict": true,
    "allowJs": false,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@backend/*": ["src/*", "dist/*"],
      "@shared/*": ["node_modules/tre-hanna-shared/src/*", "node_modules/tre-hanna-shared/dist/*"]
    }
  },
  "include": ["types", "src"]
}
