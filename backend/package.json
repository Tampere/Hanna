{
  "name": "tre-hanna-backend",
  "version": "0.1.0",
  "description": "Tampere Hanna Backend",
  "main": "src/app.ts",
  "engines": {
    "node": "18.20.4"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "dev": "concurrently 'npm:dev:*'",
    "dev:tsc": "tsc --watch --noEmit --preserveWatchOutput --pretty",
    "dev:server": "tsx watch --clear-screen=false src/app.ts",
    "test": "vitest run",
    "db-migrate": "PGOPTIONS='-c search_path=app,public' tsx src/migration.ts",
    "db-post-migrate": "PGOPTIONS='-c search_path=app,public' tsx src/postMigration.ts",
    "db-migrate:prod": "PGOPTIONS='-c search_path=app,public' node dist/migration.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tampere/Hanna.git"
  },
  "keywords": [
    "Tampere",
    "Project Management",
    "Backend"
  ],
  "author": "Ubigu Oy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tampere/Hanna/issues"
  },
  "homepage": "https://github.com/Tampere/Hanna",
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/email-templates": "^10.0.4",
    "@types/node": "^22.13.13",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "node-dev": "^8.0.0",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/http-proxy": "^11.1.2",
    "@fastify/passport": "^3.0.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@trpc/client": "^11.0.1",
    "@trpc/server": "^11.0.1",
    "axios": "^1.8.4",
    "connect-pg-simple": "^10.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "email-templates": "^12.0.2",
    "excel4node": "^1.8.2",
    "fast-json-stable-stringify": "^2.1.0",
    "fastify": "^5.2.2",
    "nodemailer": "^6.10.0",
    "openid-client": "^6.3.4",
    "pg-boss": "^10.1.6",
    "pino": "^9.6.0",
    "postgres-migrations": "^5.3.0",
    "pug": "^3.0.3",
    "server-text-width": "^1.0.2",
    "slonik": "^46.4.0",
    "soap": "^1.1.10",
    "superjson": "^2.2.2",
    "tre-hanna-shared": "file:../shared",
    "zod": "^3.24.2"
  }
}
