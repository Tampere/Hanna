{
  "name": "tre-hanna-backend",
  "version": "0.1.0",
  "description": "Tampere Hanna Backend",
  "main": "src/app.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "node-dev -r tsconfig-paths/register src/app.ts",
    "test": "vitest run",
    "db-migrate": "PGOPTIONS='-c search_path=app,public' ts-node -r tsconfig-paths/register src/migration.ts",
    "db-migrate:prod": "PGOPTIONS='-c search_path=app,public' node -r tsconfig-paths/register dist/migration.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tampere/Hanna.git"
  },
  "keywords": [
    "Tampere",
    "Project Management",
    "Backend"
  ],
  "author": "Ubigu Oy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tampere/Hanna/issues"
  },
  "homepage": "https://github.com/Tampere/Hanna",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/email-templates": "^10.0.1",
    "@types/node": "^18.15.0",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.35.0",
    "node-dev": "^8.0.0",
    "pino-pretty": "^9.4.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "vite-tsconfig-paths": "^4.0.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@fastify/compress": "^6.2.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/passport": "^2.2.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/session": "^10.1.1",
    "@fastify/static": "^6.9.0",
    "@trpc/client": "^10.14.1",
    "@trpc/server": "^10.14.1",
    "axios": "^1.3.4",
    "connect-pg-simple": "^8.0.0",
    "dotenv": "^16.0.3",
    "email-templates": "^11.0.3",
    "excel4node": "^1.8.0",
    "fast-json-stable-stringify": "^2.1.0",
    "fastify": "^4.14.1",
    "nodemailer": "^6.9.1",
    "openid-client": "^5.4.0",
    "pg-boss": "^8.4.1",
    "pino": "^8.11.0",
    "postgres-migrations": "^5.3.0",
    "pug": "^3.0.2",
    "slonik": "^33.1.0",
    "soap": "^1.0.0",
    "superjson": "^1.12.2",
    "tre-hanna-shared": "file:../shared",
    "zod": "^3.21.4"
  },
  "overrides": {
    "soap": {
      "axios": "^1.2.2"
    }
  }
}
