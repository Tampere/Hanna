{
  "name": "tre-hanna-backend",
  "version": "0.1.0",
  "description": "Tampere Hanna Backend",
  "main": "src/app.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "node-dev -r tsconfig-paths/register src/app.ts",
    "test": "echo \"No tests specified\"",
    "db-migrate": "PGOPTIONS='-c search_path=app,public' ts-node -r tsconfig-paths/register src/migration.ts",
    "db-migrate:prod": "PGOPTIONS='-c search_path=app,public' node -r tsconfig-paths/register dist/migration.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tampere/Hanna.git"
  },
  "keywords": [
    "Tampere",
    "Project Management",
    "Backend"
  ],
  "author": "Ubigu Oy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tampere/Hanna/issues"
  },
  "homepage": "https://github.com/Tampere/Hanna",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "node-dev": "^7.4.3",
    "pino-pretty": "^9.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/formbody": "^7.3.0",
    "@fastify/passport": "^2.2.0",
    "@fastify/sensible": "^5.1.1",
    "@fastify/session": "^10.0.2",
    "@fastify/static": "^6.5.0",
    "@trpc/client": "^10.0.0-rc.8",
    "@trpc/server": "^10.0.0-rc.8",
    "axios": "^1.1.3",
    "connect-pg-simple": "^8.0.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2",
    "openid-client": "^5.3.0",
    "pino": "^8.7.0",
    "postgres-migrations": "^5.3.0",
    "slonik": "^33.0.3",
    "superjson": "^1.11.0",
    "tre-hanna-shared": "file:../shared",
    "zod": "^3.19.1"
