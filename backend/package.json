{
  "name": "tre-hanna-backend",
  "version": "0.1.0",
  "description": "Tampere Hanna Backend",
  "main": "src/app.ts",
  "engines": {
    "node": "18.13.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "concurrently 'npm:dev:*'",
    "dev:tsc": "tsc --watch --noEmit --preserveWatchOutput --pretty",
    "dev:server": "tsx watch --clear-screen=false src/app.ts",
    "test": "vitest run",
    "db-migrate": "PGOPTIONS='-c search_path=app,public' tsx src/migration.ts",
    "db-migrate:prod": "PGOPTIONS='-c search_path=app,public' node -r tsconfig-paths/register dist/migration.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tampere/Hanna.git"
  },
  "keywords": [
    "Tampere",
    "Project Management",
    "Backend"
  ],
  "author": "Ubigu Oy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tampere/Hanna/issues"
  },
  "homepage": "https://github.com/Tampere/Hanna",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/email-templates": "^10.0.1",
    "@types/node": "^20.3.0",
    "@types/nodemailer": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "node-dev": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0"
  },
  "dependencies": {
    "@fastify/compress": "^6.4.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/http-proxy": "^9.2.0",
    "@fastify/passport": "^2.3.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/session": "^10.3.0",
    "@fastify/static": "^6.10.2",
    "@trpc/client": "^10.30.0",
    "@trpc/server": "^10.30.0",
    "axios": "^1.4.0",
    "connect-pg-simple": "^9.0.0",
    "dotenv": "^16.1.4",
    "email-templates": "^11.1.0",
    "excel4node": "^1.8.2",
    "fast-json-stable-stringify": "^2.1.0",
    "fastify": "^4.18.0",
    "nodemailer": "^6.9.3",
    "openid-client": "^5.4.2",
    "pg-boss": "^9.0.1",
    "pino": "^8.14.1",
    "postgres-migrations": "^5.3.0",
    "pug": "^3.0.2",
    "server-text-width": "^1.0.2",
    "slonik": "^34.0.1",
    "soap": "^1.0.0",
    "superjson": "^1.12.3",
    "tre-hanna-shared": "file:../shared",
    "zod": "^3.21.4"
  },
  "overrides": {
    "soap": {
      "axios": "^1.2.2"
    }
  }
}
